@using System.Diagnostics
@using pcBoxOrria.Controllers
@model pcBoxOrria.ViewModels.KomentarioaViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    @try
    {
        var posizioa = 0;
        foreach(var komentarioa in Model.KomentarioaViewModelList)
        {
            posizioa = posizioa + 1;
            <div class="card mb-3">
               <div class="card-body">
                    <h5 class="card-title">Erabiltzailea: @komentarioa.user</h5>
                    <p class="card-text">Mezua: @komentarioa.comentario</p>
                </div>
            </div>
        }
    }catch(Exception ex)
    {
        <p>@ex.Message</p>
    }
    <div class="container text-center fixed-bottom">
    <form asp-area="" asp-controller="Forum" asp-action="PostKomentarioa" method="POST">
        <div class="form-group row">
            <div class="col-sm-10">
                <input asp-for= "komentarioa" class="form-control" placeholder="Idatzi komentarioa">
            </div>
          <div class="col-sm-2">
            <button type="submit" class="btn btn-primary mb-2" disabled>Bidali</button>
          </div>
        </div>
      </form>
    </div>
}
